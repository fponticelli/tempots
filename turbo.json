{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^lint", "^test"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "lint:fix": {},
    "test": {},
    "test:coverage": {},
    "npm:publish": {
      "dependsOn": ["^npm:publish"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
